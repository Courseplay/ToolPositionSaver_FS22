<modDesc descVersion="62">
    <version>1.0.0.0</version>
	<author><![CDATA[Courseplay.devTeam]]></author>
	<title>
		<en>Working tool positions</en>
	</title>

    <description>
        <en>Working tool positions</en>
        <de>Working tool positions</de>
    </description>

	<iconFilename>icon_courseplay.dds</iconFilename>
    <multiplayer supported="true" />
	
	<extraSourceFiles>
	<!--	<sourceFile filename="InGameMenuExtended.lua"/> -->
	</extraSourceFiles>

	<specializations>
        <specialization name="workingToolPositions"                   className="WorkingToolPositions"                   filename="WorkingToolPositions.lua" />
    </specializations>

		<inputBinding>
		<actionBinding action="WTP_POSITION_1">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_1" />
		</actionBinding>
		<actionBinding action="WTP_POSITION_2">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_2" />
		</actionBinding>
		<actionBinding action="WTP_POSITION_3">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_3" />
		</actionBinding>
		<actionBinding action="WTP_POSITION_4">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_4" />
		</actionBinding>
		<actionBinding action="WTP_CHANGE_MODE">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_5" />
		</actionBinding>
    </inputBinding>	

	<actions>
		<action name="WTP_POSITION_1" />
		<action name="WTP_POSITION_2" />
		<action name="WTP_POSITION_3" />
		<action name="WTP_POSITION_4" />
		<action name="WTP_CHANGE_MODE" />
	</actions>

	<l10n>	
		<text name="WTP_SET_POSITION"><de>WTP: Setze Position %d</de><en>WTP: Sets position %d</en></text>	
		<text name="WTP_PLAY_POSITION"><de>WTP: Fahre Position %d an.</de><en>WTP: Plays to position %d.</en></text>	
		<text name="WTP_RESET_POSITION"><de>WTP: Positionen %d zurücksetzen.</de><en>WTP: Resets positions %d.</en></text>
		<text name="WTP_MODE_SET_PLAY"><de>WTP: Ändert Modus(Setzen/anfahren).</de><en>WTP: Changes mode.</en></text>
		<text name="WTP_MODE_RESET"><de>WTP: Ändert Modus(Zurücksetzen).</de><en>WTP: Changes mode.</en></text>
		
		<text name="WTP_MODE_CHANGED_TO_SET_PLAY"><de>WTP: Modus auf Setzen/anfahren geändert.</de><en>WTP: Changes mode.</en></text>
		<text name="WTP_MODE_CHANGED_TO_RESET"><de>WTP: Modus auf reset geändert.</de><en>WTP: Changes mode.</en></text>

		<text name="input_WTP_POSITION_1"><de>WTP: Anfahren oder Setzen der 1 Position.</de><en>WTP: Plays or sets the 1 position.</en></text>
		<text name="input_WTP_POSITION_2"><de>WTP: Anfahren oder Setzen der 2 Position.</de><en>WTP: Plays or sets the 2 position.</en></text>
		<text name="input_WTP_POSITION_3"><de>WTP: Anfahren oder Setzen der 3 Position.</de><en>WTP: Plays or sets the 3 position.</en></text>
		<text name="input_WTP_POSITION_4"><de>WTP: Anfahren oder Setzen der 4 Position.</de><en>WTP: Plays or sets the 4 position.</en></text>	
		<text name="input_WTP_CHANGE_MODE"><de>WTP: Ändert ausgewählte Modus.</de><en>WTP: Changes mode.</en></text>
	</l10n>
	
</modDesc>
