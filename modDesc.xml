<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="62">
    <version>1.0.0.0</version>
	<author><![CDATA[Courseplay.devTeam]]></author>
	<title>
		<en>Tool Position Saver</en>
	</title>

    <description>
        <en>Tool Position Saver</en>
        <de>Tool Position Saver</de>
    </description>

	<iconFilename>Icon_ToolPositionSaver.dds</iconFilename>
    <multiplayer supported="true" />
	
	<extraSourceFiles>
	<!--	<sourceFile filename="InGameMenuExtended.lua"/> -->
	</extraSourceFiles>

	<specializations>
        <specialization name="toolPositionSaver"                   className="ToolPositionSaver"                   filename="ToolPositionSaver.lua" />
    </specializations>

		<inputBinding>
		<actionBinding action="TPS_POSITION_1">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_1" />
		</actionBinding>
		<actionBinding action="TPS_POSITION_2">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_2" />
		</actionBinding>
		<actionBinding action="TPS_POSITION_3">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_3" />
		</actionBinding>
		<actionBinding action="TPS_POSITION_4">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_4" />
		</actionBinding>
		<actionBinding action="TPS_CHANGE_MODE">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_5" />
		</actionBinding>
    </inputBinding>	

	<actions>
		<action name="TPS_POSITION_1" />
		<action name="TPS_POSITION_2" />
		<action name="TPS_POSITION_3" />
		<action name="TPS_POSITION_4" />
		<action name="TPS_CHANGE_MODE" />
	</actions>

	<l10n>	
		<text name="TPS_SET_POSITION"><de>TPS: Setze Position %d</de><en>TPS: Set position %d</en></text>	
		<text name="TPS_PLAY_POSITION"><de>TPS: Fahre Position %d an.</de><en>TPS: Play position %d.</en></text>	
		<text name="TPS_RESET_POSITION"><de>TPS: Positionen %d zurücksetzen.</de><en>TPS: Reset positions %d.</en></text>
		<text name="TPS_MODE_SET_PLAY"><de>TPS: Ändert Modus(Setzen/anfahren).</de><en>TPS: Change mode.</en></text>
		<text name="TPS_MODE_RESET"><de>TPS: Ändert Modus(Zurücksetzen).</de><en>TPS: Change mode.</en></text>
		
		<text name="TPS_MODE_CHANGED_TO_SET_PLAY"><de>TPS: Modus auf Setzen/anfahren geändert.</de><en>TPS: Change mode.</en></text>
		<text name="TPS_MODE_CHANGED_TO_RESET"><de>TPS: Modus auf reset geändert.</de><en>TPS: Change mode.</en></text>

		<text name="input_TPS_POSITION_1"><de>TPS: Anfahren oder Setzen der 1 Position.</de><en>TPS: Play or set the 1 position.</en></text>
		<text name="input_TPS_POSITION_2"><de>TPS: Anfahren oder Setzen der 2 Position.</de><en>TPS: Play or set the 2 position.</en></text>
		<text name="input_TPS_POSITION_3"><de>TPS: Anfahren oder Setzen der 3 Position.</de><en>TPS: Play or set the 3 position.</en></text>
		<text name="input_TPS_POSITION_4"><de>TPS: Anfahren oder Setzen der 4 Position.</de><en>TPS: Play or set the 4 position.</en></text>	
		<text name="input_TPS_CHANGE_MODE"><de>TPS: Ändert ausgewählte Modus.</de><en>TPS: Changes mode.</en></text>
	</l10n>
	
</modDesc>
